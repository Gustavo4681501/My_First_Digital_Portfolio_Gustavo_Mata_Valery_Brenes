<%= form_with model: [:admin, skill] do |form| %>
    <% if skill.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

        <ul>
            <% skill.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
    </div>

    <%= form.label :skill_type_id, "Select a type of skill:" %>
    <br>
    <%= form.select :skill_type_id, @skill_types.map { |c| [c.name, c.id] }, include_blank: "Select a type of skill" %>


    <div>
        <%= form.submit %>
    </div>
<% end %>
